{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [
    100
  ],

  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,

  "luau-lsp.sourcemap.rojoProjectFile": "test-place.project.json",
  "luau-lsp.plugin.maximumRequestBodySize": "500mb",
  "luau-lsp.plugin.enabled": true,
  "luau-lsp.completion.autocompleteEnd": true,
  "luau-lsp.completion.imports.enabled": true,
  "luau-lsp.completion.imports.separateGroupsWithLine": true,
  "luau-lsp.hover.multilineFunctionDefinitions": true,
  "luau-lsp.hover.showTableKinds": true,
  "luau-lsp.inlayHints.makeInsertable": false,
  "luau-lsp.inlayHints.hideHintsForMatchingParameterNames": false,
  "luau-lsp.sourcemap.autogenerate": true,
  "luau-lsp.sourcemap.includeNonScripts": true,
  "luau-lsp.diagnostics.workspace": true,
  "luau-lsp.diagnostics.strictDatamodelTypes": true,
  "luau-lsp.completion.imports.requireStyle": "alwaysRelative",
  "luau-lsp.completion.imports.stringRequires.enabled": true,
  "luau-lsp.completion.fillCallArguments": false,
  "luau-lsp.completion.showDeprecatedItems": false,
  "luau-lsp.fflags.enableNewSolver": false,
  "luau-lsp.index.maxFiles": 100000,
  "luau-lsp.plugin.port": 3669,
  "luau-lsp.ignoreGlobs": ["plugin-build/**", ".lune/**", "Packages/**", "DevPackages/**"],

  "stylua.targetReleaseVersion": "latest",
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[luau]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },

  "git.ignoreLimitWarning": true
}
